{
  "name": "@shotamatsuda/colorschemer",
  "version": "0.0.1",
  "description": "",
  "repository": "shotamatsuda/colorschemer",
  "main": "dist/main.js",
  "author": "Shota Matsuda",
  "license": "MIT",
  "homepage": "https://github.com/shotamatsuda/colorschemer",
  "files": [
    "package.json",
    "README.md",
    "src"
  ],
  "scripts": {
    "start": "npm run watch",
    "build": "npm-run-all --parallel copy:js copy:css build:js build:css build:html",
    "build:js": "npm-run-all js:compile js:minify",
    "build:css": "npm-run-all css:compile css:minify",
    "build:html": "npm-run-all html:minify",
    "js:lint": "eslint --ext .js,.jsx src test",
    "js:compile": "rollup -c",
    "js:minify": "uglifyjs --compress --mangle --output dist/js/main.min.js dist/js/main.js",
    "css:compile": "stylus --print --sourcemap-inline src/css/main.styl | postcss --config . --output dist/css/main.css",
    "css:minify": "cleancss --level 1 --source-map --output dist/css/main.min.css dist/css/main.css",
    "html:minify": "html-minifier --collapse-whitespace --remove-comments --output dist/index.html src/index.html",
    "copy:js": "mkdir -p dist/js && cp node_modules/react/dist/react.js node_modules/react/dist/react.min.js node_modules/react-dom/dist/react-dom.min.js node_modules/react-dom/dist/react-dom.js node_modules/tether/dist/js/tether.min.js node_modules/jquery/dist/jquery.slim.min.js node_modules/bootstrap/dist/js/bootstrap.min.js dist/js",
    "copy:css": "mkdir -p dist/css && cp node_modules/bootstrap/dist/css/bootstrap.min.css dist/css",
    "lint": "npm-run-all js:lint",
    "prewatch": "npm run build",
    "watch": "npm-run-all --parallel watch:js watch:css watch:html serve",
    "watch:js": "nodemon -C --watch src --ext js,jsx --exec 'npm run js:compile'",
    "watch:css": "nodemon -C --watch src --ext styl --exec 'npm run css:compile'",
    "watch:html": "nodemon -C --watch src --ext html --exec 'npm run build:html'",
    "serve": "browser-sync start --server dist --files dist --no-notify --no-open",
    "clean": "del 'dist/*'"
  },
  "dependencies": {
    "@shotamatsuda/color": "github:shotamatsuda/color",
    "@takram/planck-core": "^0.1.13",
    "babel-polyfill": "^6.23.0",
    "bootstrap": "^4.0.0-alpha.6",
    "jquery": "^3.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "tether": "^1.4.0"
  },
  "devDependencies": {
    "@takram/eslint-config-planck": "^0.1.7",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "browser-sync": "^2.18.12",
    "clean-css-cli": "^4.1.6",
    "del-cli": "^1.1.0",
    "eslint": "^3.19.0",
    "html-minifier": "^3.5.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^1.1.1",
    "stylus": "^0.54.5",
    "uglify-js": "^3.0.25"
  }
}
